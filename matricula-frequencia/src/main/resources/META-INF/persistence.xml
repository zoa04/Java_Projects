<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
  <persistence-unit name="matriculaPU" transaction-type="JTA">
    <!-- For WildFly, change jta-data-source to the server datasource JNDI (e.g. java:/MyDS) -->
    <jta-data-source>java:/JdbcMatriculaDS</jta-data-source>
    <properties>
      <!-- Hibernate provider properties for testing with H2 (if server datasource isn't configured, use resource-local settings) -->
      <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
      <property name="hibernate.show_sql" value="false"/>
    </properties>
  </persistence-unit>
</persistence>
